<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="@android:color/holo_red_light" />
            <gradient android:angle="-90" android:startColor="@android:color/holo_red_light" android:endColor="@android:color/holo_red_light"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >

            <stroke android:width="1dip" android:color="@android:color/holo_red_light" />
            <gradient android:angle="-90" android:startColor="@android:color/holo_red_light" android:endColor="#D7263D" />
        </shape>
    </item>
</selector>